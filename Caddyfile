# Caddyfile for OpenResearchDataPlanner
# Serves static SPA with proper routing

:4000 {
    # For production (multi-stage build): /srv
    # For dev (runtime build): /app/dist
    root * /srv

    # Enable compression
    encode gzip zstd

    # SPA routing: try file, then index.html
    try_files {path} /index.html

    file_server

    # Cache static assets aggressively
    @static {
        path *.js *.css *.woff *.woff2 *.png *.jpg *.svg *.ico
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    # Don't cache HTML (for updates)
    @html {
        path *.html /
    }
    header @html Cache-Control "no-cache, must-revalidate"

    # Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Health check endpoint
    respond /health 200
}
